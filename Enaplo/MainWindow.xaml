<Window x:Class="Enaplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enaplo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Gombok stílusa -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <!-- Szövegdobozok stílusa -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- ComboBox stílusa -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
        <TextBlock Text="E-Napló" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,100,0,0">
            <Button Content="Diákok" Width="200" Height="50" Click="DiakokButton_Click"/>
            <Button Content="Tantárgyak" Width="200" Height="50" Click="TantargyakButton_Click"/>
            <Button Content="Jegyek" Width="200" Height="50" Click="JegyekButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
